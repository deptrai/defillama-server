# Telegram Mock Server Dockerfile
FROM node:20-alpine

WORKDIR /app

# Install dependencies
COPY package.json ./
RUN npm install express body-parser

# Copy mock server code and TypeScript config
COPY telegram-mock-server.ts tsconfig.json ./

# Install TypeScript and type definitions locally, then compile
RUN npm install --save-dev typescript @types/node @types/express && \
    npx tsc

# Expose port
EXPOSE 3100

# Health check endpoint
HEALTHCHECK --interval=10s --timeout=5s --retries=5 \
  CMD wget --quiet --tries=1 --spider http://localhost:3100/health || exit 1

# Start server with compiled JavaScript
CMD ["node", "telegram-mock-server.js"]

