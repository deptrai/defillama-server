{
  "name": "defillama-premium",
  "version": "2.0.0",
  "description": "DeFiLlama Premium Features - Serverless Lambda functions",
  "main": "index.js",
  "scripts": {
    "dev": "serverless offline --stage dev",
    "deploy:dev": "serverless deploy --stage dev",
    "deploy:staging": "serverless deploy --stage staging",
    "deploy:prod": "serverless deploy --stage prod",
    "test": "jest --runInBand",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --config jest.e2e.config.js",
    "test:e2e:notifications": "jest src/alerts/__tests__/e2e/notifications",
    "test:e2e:notifications:email": "jest src/alerts/__tests__/e2e/notifications/email-notifications.e2e.test.ts",
    "test:e2e:notifications:telegram": "jest src/alerts/__tests__/e2e/notifications/telegram-notifications.e2e.test.ts",
    "test:e2e:notifications:discord": "jest src/alerts/__tests__/e2e/notifications/discord-notifications.e2e.test.ts",
    "test:e2e:notifications:webhook": "jest src/alerts/__tests__/e2e/notifications/webhook-notifications.e2e.test.ts",
    "test:e2e:notifications:multi": "jest src/alerts/__tests__/e2e/notifications/multi-channel.e2e.test.ts",
    "test:all": "pnpm test && pnpm test:e2e",
    "test:load": "pnpm test:load:whale && pnpm test:load:price",
    "test:load:quick": "artillery run tests/load/quick-test.yml",
    "test:load:whale": "artillery run tests/load/whale-alerts.yml --output tests/load/reports/whale-alerts.json && artillery report tests/load/reports/whale-alerts.json --output tests/load/reports/whale-alerts.html",
    "test:load:price": "artillery run tests/load/price-alerts.yml --output tests/load/reports/price-alerts.json && artillery report tests/load/reports/price-alerts.json --output tests/load/reports/price-alerts.html",
    "test:db": "ts-node scripts/test-db-connection.ts",
    "logs": "serverless logs -f createAlert --stage dev --tail",
    "remove:dev": "serverless remove --stage dev",
    "remove:prod": "serverless remove --stage prod"
  },
  "keywords": [
    "defi",
    "defillama",
    "premium",
    "alerts",
    "tax",
    "portfolio",
    "serverless",
    "lambda"
  ],
  "author": "DeFiLlama Team",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.490.0",
    "@aws-sdk/client-sns": "^3.490.0",
    "@aws-sdk/client-sqs": "^3.490.0",
    "@sendgrid/mail": "^8.1.0",
    "aws-sdk": "^2.1540.0",
    "axios": "^1.6.5",
    "ioredis": "^5.8.1",
    "node-telegram-bot-api": "^0.64.0",
    "nodemailer": "^7.0.9",
    "postgres": "^3.4.3",
    "redis": "^4.6.12",
    "stripe": "^14.10.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.131",
    "@types/express": "^5.0.3",
    "@types/ioredis": "^5.0.0",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/nodemailer": "^7.0.2",
    "artillery": "^2.0.3",
    "artillery-plugin-expect": "^2.20.0",
    "jest": "^29.7.0",
    "serverless": "^3.38.0",
    "serverless-offline": "^13.3.2",
    "serverless-plugin-typescript": "^2.1.5",
    "serverless-plugin-warmup": "^8.2.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
