{
  "name": "defillama-supabase-websocket",
  "version": "1.0.0",
  "description": "DeFiLlama WebSocket Server for Self-hosted Supabase - 100% FREE solution with unlimited connections",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "docker:build": "docker build -t defillama-websocket .",
    "docker:run": "docker run -p 8080:8080 --env-file .env defillama-websocket"
  },
  "keywords": [
    "defillama",
    "websocket",
    "supabase",
    "realtime",
    "defi",
    "blockchain",
    "free",
    "self-hosted"
  ],
  "author": "DeFiLlama Team",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "@supabase/realtime-js": "^2.9.3",
    "express": "^4.18.2",
    "socket.io": "^4.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "redis": "^4.6.12",
    "ioredis": "^5.3.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/jest": "^29.5.8",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DefiLlama/defillama-server"
  },
  "bugs": {
    "url": "https://github.com/DefiLlama/defillama-server/issues"
  },
  "homepage": "https://defillama.com"
}
